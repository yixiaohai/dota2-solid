{
    "include": ["**/*.ts"],
    "compilerOptions": {
        "rootDir": ".",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "target": "ESNext",
        "lib": ["ESNext"],
        "typeRoots": ["./node_modules/@types"]
    }
}
